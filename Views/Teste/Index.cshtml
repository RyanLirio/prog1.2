@model WebApplication1.Controllers.Result

@{
    ViewData["Title"] = "Cifra de César";
}

<div class="text-center">
    <h1>Cifra de César</h1>
    <p>Insira o texto:</p>

    <form asp-controller="Teste" asp-action="Processar" method="post">
        <div>
            <label for="texto">Texto:</label>
            <input type="text" id="texto" name="texto" value="@Model.TextoEntrada" />
        </div>
        <button type="submit" name="acao" value="codificar">Codificar</button>
        <button type="submit" name="acao" value="decodificar">Decodificar</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.TextoSaida))
    {
        <h3>Resultado:</h3>
        <p><strong>@Model.TextoSaida</strong></p>
    }
</div>